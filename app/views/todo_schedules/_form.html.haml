= form_for @todo_schedule do |f|
  - if @todo_schedule.errors.any?
    #error_explanation
      %h2= "#{pluralize(@todo_schedule.errors.count, "error")} prohibited this todo_schedule from being saved:"
      %ul
        - @todo_schedule.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :todo_id
    = f.number_field :todo_id
  .field
    = f.label :member_id
    = f.number_field :member_id
  .field
    = f.label :start_date
    = f.date_select :start_date
  .field
    = f.label :end_date
    = f.date_select :end_date
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :schedule
    = f.text_area :schedule
  .field
    = f.label :notes
    = f.text_area :notes
  .actions
    = f.submit 'Save'
