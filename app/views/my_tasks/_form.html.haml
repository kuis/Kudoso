= form_for @my_task do |f|
  - if @my_task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@my_task.errors.count, "error")} prohibited this my_task from being saved:"
      %ul
        - @my_task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :task_schedule_id
    = f.number_field :task_schedule_id
  .field
    = f.label :member_id
    = f.number_field :member_id
  .field
    = f.label :due_date
    = f.date_select :due_date
  .field
    = f.label :due_time
    = f.datetime_select :due_time
  .field
    = f.label :complete
    = f.check_box :complete
  .field
    = f.label :verify
    = f.check_box :verify
  .field
    = f.label :verified_at
    = f.datetime_select :verified_at
  .field
    = f.label :verified_by
    = f.number_field :verified_by
  .actions
    = f.submit 'Save'
