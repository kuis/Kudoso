= form_for(@household) do |f|
  - if @household.errors.any?
    #error_explanation
      %h2
        = pluralize(@household.errors.count, "error")
        prohibited this household from being saved:
      %ul
        - @household.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :primary_contact_id
    %br/
    = f.number_field :primary_contact_id
  .actions
    = f.submit
