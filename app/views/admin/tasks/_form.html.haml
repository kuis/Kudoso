= form_for [@family, @task] do |f|
  - if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  %ul.small-block-grid-3
    %li
      = f.label :required
      = f.check_box :required
    %li
      = f.label :active
      = f.check_box :active
    %li
      = f.label :kudos
      = f.number_field :kudos
  .field
    = f.label :schedule
    = f.select_recurring :schedule
  .actions
    = f.submit 'Save'
