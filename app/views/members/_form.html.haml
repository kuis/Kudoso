.authform
  = form_for([@family,@member]) do |f|
    - if @member.errors.any?
      #error_explanation
        %h2
          = pluralize(@member.errors.count, "error")
          prohibited this household from being saved:
        %ul
          - @member.errors.full_messages.each do |message|
            %li= message
    .form-group
      = f.label :first_name
      %br/
      = f.text_field :first_name
    .form-group
      = f.label :last_name
      %br/
      = f.text_field :last_name
    .form-group
      = f.label :username
      %br/
      = f.text_field :username
    .form-group
      = f.label :birth_date
      %br/
      = f.date_select :birth_date
    .form-group
      = f.label :password
      %br/
      = f.password_field :password
    - if current_user.member.parent?
      .form-group
      = f.label :parent
      %br/
      = f.check_box :parent
    = f.hidden_field :family_id, value: @member.family_id
    .actions
      = f.submit :class => 'button right'
