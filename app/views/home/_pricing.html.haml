.cd-pricing-container.cd-has-margins
  .cd-pricing-switcher
    %p.fieldset
      %input#yearly-2{:checked => "checked", :name => "duration-2", :type => "radio", :value => "yearly"}/
      %label{:for => "yearly-2"} Yearly
      %input#monthly-2{:name => "duration-2", :type => "radio", :value => "monthly"}/
      %label{:for => "monthly-2"} Monthly
      %span.cd-switch
  %ul.cd-pricing-list.cd-bounce-invert
