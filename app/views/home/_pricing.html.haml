            %h2 Aspen
            .cd-price
              %span.cd-currency $
              %span.cd-value 10
              %span.cd-duration mo
          .cd-pricing-body
            %ul.cd-pricing-features
              %li
                %em 1
                Child
              %li
                %em 1
                Device Managed
              %li
                %em 1 SmartPlug
                Control Extra
              %li
                %em Gateway
                Internet Control Extra
              %li
                %em Mobile Devices
                Not Included
              %li
                %em Content Filtering
                Not included
          %footer.cd-pricing-footer
            = link_to 'Select', new_user_registration_path(plan: 'Aspen', annual: false), class: 'cd-select'
