= form_for @todo_group do |f|
  - if @todo_group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@todo_group.errors.count, "error")} prohibited this todo_group from being saved:"
      %ul
        - @todo_group.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :rec_min_age
    = f.number_field :rec_min_age
  .field
    = f.label :rec_max_age
    = f.number_field :rec_max_age
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit 'Save'
