set daemon 60
set idfile /root/em/log/monit.pid

set httpd port 2812 and
    use address localhost  # only accept connection from localhost
    allow localhost        # allow localhost to connect to the server and
    allow admin:monit

check process proxy
      with pidfile /root/em/log/proxy.pid
      start = "/usr/bin/ruby /root/em/proxy_control.rb start"
      stop = "/usr/bin/ruby /root/em/proxy_control.rb stop"
      restart = "/usr/bin/ruby /root/em/proxy_control.rb restart"
